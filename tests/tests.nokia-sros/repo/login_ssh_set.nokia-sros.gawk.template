@include %SED_INCLUDE_PATH%

BEGIN {
}

BEGINFILE {
	pass = 0;
	block_system = 0;
	block_login = 0;
}

/^%SED_BK_NOKIA%system/ && block_system == 0 {
	block_system = 1;
	next;
}

/^%SED_BK_NOKIA%{2}login-control/ && block_system == 1 {
	block_login = 1;
	next;
}

/^%SED_BK_NOKIA%{3}ssh/ && block_login == 1 {
	print_err("login_ssh_set.nokia-sros.gawk",rm_blank_before($0),FNR,"high","pass");
	pass = 1;
	next;
}

/^%SED_BK_NOKIA%{2}exit$/ && block_login == 1 {
	block_login = 0;
}

/^%SED_BK_NOKIA%exit$/ && block_system == 1 {
	block_system = 0;
}

ENDFILE {
        if ( !pass ) print_err("login_ssh_set.nokia-sros.gawk","login forbidden ssh is not set",0,"high","error");
}

END {
}
