@include %SED_INCLUDE_PATH%

BEGIN {
}

BEGINFILE {
	pass = 1 ;
}

/^lldp enable/ {
	print_err("global_lldp_notset.huawei-vrp.gawk",$0,FNR,"high","error");
	pass = 0;
	nextfile;
}

ENDFILE {
	if ( pass ) print_err("global_lldp_notset.huawei-vrp.gawk","lldp is not set",0,"high","pass");
}

END {
}
