@include %SED_INCLUDE_PATH%

BEGIN {
}

BEGINFILE {
	pass = 1;
}

/^(ip )?ssh(s)? / && /(version 1|v1)/ {
	print_err("ssh_versionv1_notset.cisco-ios.gawk",$0,FNR,"high","error");
        pass = 0;
	nextfile;
}

ENDFILE {
        if ( pass ) print_err("ssh_versionv1_notset.cisco-ios.gawk","<ssh version 1> is not set",0,"high","pass");
}

END {
}
