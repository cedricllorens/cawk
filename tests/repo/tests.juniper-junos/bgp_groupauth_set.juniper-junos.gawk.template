@include %SED_INCLUDE_PATH%

BEGIN {
}

BEGINFILE {
	block_protocols = 0;
	block_bgp = 0;
	block_group = 0;
	pass = 0;
}

/^protocols {/ {
        block_protocols = 1;
	next;
}

/^%SED_BK_JUNI%bgp {/ && block_protocols == 1 {
        block_bgp = 1;
	next;
}

/^%SED_BK_JUNI%{2}group .+ {/ && block_bgp == 1 {
	block_group = 1;
	pass = 0;
	group_edit = rm_last_char(rm_blank_before($0));
	group_edit_no = FNR;
	next;
}

/^%SED_BK_JUNI%{3}authentication-key(-chain)? / && block_group == 1 {
	print_err("bgp_groupauth_set.juniper-junos.gawk",group_edit" "rm_last_char(rm_blank_before($0)),FNR,"high","pass");
	pass = 1;
	next;
}

/^%SED_BK_JUNI%{2}}$/ && block_group == 1 {
	if ( !pass ) print_err("bgp_groupauth_set.juniper-junos.gawk","bgp/group authentication-key is not set :"group_edit,group_edit_no,"high","error");
	block_group = 0;
	next;
}

/^%SED_BK_JUNI%}$/ && block_bgp == 1 {
	block_bgp = 0;
	next;
}

/^}$/ && block_protocols == 1 {
	block_protocols = 0;
	next;
}

ENDFILE {
}

END {
}
