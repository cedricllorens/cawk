@include %SED_INCLUDE_PATH%

BEGIN {
}

BEGINFILE {
	pass = 1;
}

/^snmp-server user \w+ \w+ v3/ && / auth / && / priv / {
	print_err("snmp_v3user_set.cisco-xe.gawk",$0,FNR,"high","pass");
    pass = 0;
	next;
}

ENDFILE {
    if ( pass ) print_err("snmp_v3user_set.cisco-xe.gawk","snmp v3 user is not set",0,"high","error");
}

END {
}
