@include %SED_INCLUDE_PATH%

BEGIN {
}

BEGINFILE {
	pass = 1 ;
	block_interface = 0;
	block_edit = 0;
}

/^config system interface/ {
	block_interface = 1;
	next;
}

/^%SED_BK_FORTI%edit / && block_interface == 1 {
	block_edit = 1;
	block_edit_str = rm_blank_before($0);
	next;
}

/^%SED_BK_FORTI%{2}[ ]*set icmp-unreachable enable/ && block_edit == 1 {
	print_err("int_icmpunreachable_notset.fortinet-fortios.gawk",block_edit_str" "rm_blank_before($0),0,"high","error");
	pass = 0;
	next;
}

/^%SED_BK_FORTI%next$/ && block_edit == 1 {
	block_edit = 0;
	next;
}

/^end$/ {
	block_edit = 0;
	block_interface = 0;
}

ENDFILE {
	if ( pass ) print_err("int_icmpunreachable_notset.fortinet-fortios.gawk","no interface with <icmp-unreachable>",0,"high","pass");
}

END {
}
