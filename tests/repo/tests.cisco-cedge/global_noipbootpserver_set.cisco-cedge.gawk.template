@include %SED_INCLUDE_PATH%

BEGIN {
}

BEGINFILE {
	pass = 1;
}

/^no ip bootp server/ {
	print_err("global_noipbootpserver_set.cisco-cedge.gawk",$0,FNR,"high","pass");
	pass = 0;
	next;
}

/^ip bootp server/ {
	print_err("global_noipbootpserver_set.cisco-cedge.gawk","<ip bootp server> is set",0,"high","error");
	next;
}

ENDFILE {
	if ( pass ) print_err("global_noipbootpserver_set.cisco-cedge.gawk","<no ip bootp server> is not set",0,"high","error");
}

END {
}
