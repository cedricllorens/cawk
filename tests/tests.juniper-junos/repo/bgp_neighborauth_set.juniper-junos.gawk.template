@include %SED_INCLUDE_PATH%

BEGIN {
}

BEGINFILE {
	block_protocols = 0;
	block_bgp = 0;
	block_neighbor = 0;
	pass = 0;
}

/^protocols {/ {
        block_protocols = 1;
	next;
}

/^%SED_BK_JUNI%bgp {/ && block_protocols == 1 {
        block_bgp = 1;
	next;
}

/^%SED_BK_JUNI%{2}neighbor .+ {/ && block_bgp == 1 {
	block_neighbor = 1;
	pass = 0;
	neighbor_edit = rm_last_char(rm_blank_before($0));
	neighbor_edit_no = FNR;
	next;
}

/^%SED_BK_JUNI%{3}authentication-key / && block_neighbor == 1 {
	print_err("bgp_neighborauth_set.juniper-junos.gawk",neighbor_edit" "rm_last_char(rm_blank_before($0)),FNR,"high","pass");
	pass = 1;
	next;
}

/^%SED_BK_JUNI%{2}}$/ && block_neighbor == 1 {
	if ( !pass ) print_err("bgp_neighborauth_set.juniper-junos.gawk","bgp/neighbor authentication-key is not set :"neighbor_edit,neighbor_edit_no,"high","error");
	block_neighbor = 0;
	next;
}

/^%SED_BK_JUNI%}$/ && block_bgp == 1 {
	block_bgp = 0;
	next;
}

/^}$/ && block_protocols == 1 {
	block_protocols = 0;
	next;
}

ENDFILE {
}

END {
}
