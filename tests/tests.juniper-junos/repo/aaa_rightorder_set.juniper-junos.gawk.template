@include %SED_INCLUDE_PATH%

BEGIN {
}

BEGINFILE {
	pass = 0;
	block_system = 0;
}

/^system {/ && block_system == 0 {
	block_system = 1;
	next;
}

/^%SED_BK_JUNI%(authentication-order|auth-order) (\[ )?%SED_AAASYSTEM_JUNI%/ && block_system == 1 && !/inactive/ {
	print_err("aaa_rightorder_set.juniper-junos.gawk",rm_blank_before($0),FNR,"high","pass");
        pass = 1;
	nextfile;	
}

/^}$/ && block_system == 1 {
	block_system = 0;
}

ENDFILE {
        if ( ! pass ) print_err("aaa_rightorder_set.juniper-junos.gawk","aaa auth order is not set",0,"high","error");
}

END {
}
