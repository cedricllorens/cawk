@include %SED_INCLUDE_PATH%

BEGIN {
}

BEGINFILE {
	pass = 0 ;
}

/^(s)?ntp-service [^ ]+ [0-9\.]+/ {
	print_err("ntp_ip_set.huawei-vrp.gawk",$0,FNR,"high","pass");
	pass = 1;
	nextfile;
}

ENDFILE {
	if ( !pass ) print_err("ntp_ip_set.huawei-vrp.gawk","ntp server is not set",0,"high","error");
}

END {
}
