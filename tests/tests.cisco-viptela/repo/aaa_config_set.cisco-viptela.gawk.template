@include %SED_INCLUDE_PATH%

BEGIN {
}

BEGINFILE {
	pass = 0;
	block_system = 0;
}

/^system/ {
	block_system = 1;
	next;
}

/^ aaa/ && block_system == 1 {
	print_err("aaa_config_set.cisco-viptela.gawk",$0,FNR,"high","pass");
	pass = 1;
	next;
}

/^!$/ && block_system == 1 {
	block_system = 0;
	next;
}

ENDFILE {
	if ( ! pass ) print_err("aaa_config_set.cisco-viptela.gawk","aaa config is not set",0,"high","error");
}

END {
}
