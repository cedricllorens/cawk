@include %SED_INCLUDE_PATH%

BEGIN {
}

BEGINFILE {
	pass = 1;
	src = 0;
	dst = 0;
	service = 0;
}

/^config firewall policy/ {
	block_firewall = 1;
	next;
}

/^%SED_BK_FORTI%edit / && block_firewall == 1 {
	block_edit = 1;
	src = 0;
	dst = 0;
	service = 0;
	next;
}

/^%SED_BK_FORTI%{2}set srcaddr "all"/ && block_edit == 1 {
	src = 1;
	next;
}

/^%SED_BK_FORTI%{2}set dstaddr "all"/ && block_edit == 1 {
	dst = 1;
	next;
}

/^%SED_BK_FORTI%{2}set service "ALL"/ && block_edit == 1 {
	service = 1;
	next;
}

/^%SED_BK_FORTI%{2}set action accept/ && block_edit == 1 {
	if ( src && dst && service ) {
		print_err("firewall_allall_noset.fortinet-fortios.gawk","firewall has rule src=all dst=all service=all action=accept",FNR,"high","error");
		pass = 0;
	}
	next;
}

/^%SED_BK_FORTI%next$/ && block_edit == 1 {
	block_edit = 0;
	next;
}

/^end$/ && block_firewall == 1 {
	block_firewall = 0;
}

ENDFILE {
	if ( pass ) print_err("firewall_allall_noset.fortinet-fortios.gawk","firewall has no rule src=all dst=all service=all action=accept",0,"high","pass");
}

END {
}
