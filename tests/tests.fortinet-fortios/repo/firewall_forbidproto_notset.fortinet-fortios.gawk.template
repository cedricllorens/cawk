@include %SED_INCLUDE_PATH%

BEGIN {
}

BEGINFILE {
	pass = 1;
}

/^config firewall policy/ {
	block_firewall = 1;
	next;
}

/^%SED_BK_FORTI%edit / && block_firewall == 1 {
	block_edit = 1;
	next;
}

/^%SED_BK_FORTI%{2}set service %SED_FORBIDPROTO_FORTI%/ && block_edit == 1 {
	print_err("firewall_forbidproto_noset.fortinet-fortios.gawk",rm_blank_before($0),FNR,"high","error");
	pass = 0;
	next;
}

/^%SED_BK_FORTI%next$/ && block_edit == 1 {
	block_edit = 0;
	next;
}

/^end$/ && block_firewall == 1 {
	block_firewall = 0;
}

ENDFILE {
	if ( pass ) print_err("firewall_forbidproto_noset.fortinet-fortios.gawk","firewall has no forbidden protocols",0,"high","pass");
}

END {
}
