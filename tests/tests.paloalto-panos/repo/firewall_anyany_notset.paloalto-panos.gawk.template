@include %SED_INCLUDE_PATH%

BEGIN {
}

BEGINFILE {
	src = 0;
	dst = 0;
	service = 0;
	pass = 1;
}

/^security/ {
	block_firewall = 1;
	next;
}

/^%SED_BK_PALO%rules/ && block_firewall == 1 {
	block_rules = 1;
	next;
}

/^%SED_BK_PALO%{2}[^ ]/ && !/^%SED_BK_PALO%{2}\}/ && block_rules == 1 {
	block_rule = 1;
	src = 0;
	dst = 0;
	service = 0;
	next;
}

/^%SED_BK_PALO%{3}source any/ && block_rules == 1 {
	src = 1;
	next;
}

/^%SED_BK_PALO%{3}destination any/ && block_rules == 1 {
	dst = 1;
	next;
}

/^%SED_BK_PALO%{3}service any/ && block_rules == 1 {
	service = 1;
	next;
}

/^%SED_BK_PALO%{3}action allow/ && block_rules == 1 {
	if ( src && dst && service ) {
		print_err("firewall_anyany_notset.paloalto-panos.gawk","firewall has rule src=any dst=any service=any action=allow",FNR,"high","error");
		pass = 0;
	}
	next;
}

/^%SED_BK_PALO%\}/ && block_rules == 1 {
	block_rules = 0;
	next;
}

/^\}/ && block_firewall == 1 {
	block_firewall = 0;
	next;
}

ENDFILE {
	if ( pass ) {
		print_err("firewall_anyany_notset.paloalto-panos.gawk","firewall has no rule src=any dst=any service=any action=allow",0,"high","pass");
	} 
}

END {
}
