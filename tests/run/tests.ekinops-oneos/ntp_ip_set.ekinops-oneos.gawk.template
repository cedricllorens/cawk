@include %SED_INCLUDE_PATH%

BEGIN {
}

BEGINFILE {
    pass = 0;
}

/^sntp server .*$/{
    print_err("ntp_ip_set.ekinops-oneos.gawk","<ntp ip> is set : "$0,FNR,"high","pass");
    pass = 1;
    nextfile;
}

ENDFILE {
    if (pass == 0) print_err("ntp_ip_set.ekinops-oneos.gawk","<ntp ip> is not set",0,"high","error");
}

END {
}
