@include %SED_INCLUDE_PATH%

BEGIN {
}

BEGINFILE {
	pass = 1;
}

/^snmp-server host / && / (version 3|v3) / {
	print_err("snmp_v3host_set.cisco-ios.gawk",$0,FNR,"high","pass");
	pass = 0;
	nextfile;
}

ENDFILE {
    if ( pass ) print_err("snmp_v3host_set.cisco-ios.gawk","snmp v3 host is not set",0,"high","error");
}

END {
}
