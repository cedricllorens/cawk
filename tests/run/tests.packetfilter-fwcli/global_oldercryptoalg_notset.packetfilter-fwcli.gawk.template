@include %SED_INCLUDE_PATH%

BEGIN {
}

BEGINFILE {
	pass = 1;
}

tolower($0) ~ /%SED_OLD_CRYPTO%/ {
	print_err("global_oldercryptoalg_notset.packetfilter-fwcli.gawk",$0,FNR,"high","error");
        pass = 0;
	nextfile;
}

ENDFILE {
        if ( pass ) print_err("global_oldercryptoalg_notset.packetfilter-fwcli.gawk","<older crypto algorithm> is not set",0,"high","pass");
}

END {
}
