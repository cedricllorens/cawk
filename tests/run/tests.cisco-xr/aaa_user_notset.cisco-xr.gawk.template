@include %SED_INCLUDE_PATH%

BEGIN {
}

BEGINFILE {
	pass = 1;
}

/^username / && !/^username %SED_AUTHUSER_CISCO%/ {
	print_err("aaa_user_notset.cisco-xr.gawk",$0,FNR,"high","error");
	pass = 0;
	next;
}

ENDFILE {
	if ( pass ) print_err("aaa_user_notset.cisco-xr.gawk","aaa forbidden users are not set",0,"high","pass");
}

END {
}
