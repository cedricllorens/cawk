@include %SED_INCLUDE_PATH%

BEGIN {
}

BEGINFILE {
	pass = 1;
}

/encr 3des/ || /hash md5/ || / md5 / || / 3des / {
	print_err("ipsec_oldercryptoalg_notset.cisco-xe.gawk",$0,FNR,"high","error");
        pass = 0;
	nextfile;
}

ENDFILE {
        if ( pass ) print_err("ipsec_olderalgcrypto_notset.cisco-xe.gawk","<older crypto algorithm> is not set",0,"high","pass");
}

END {
}
